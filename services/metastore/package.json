{
  "name": "pot-pourri-metastore",
  "version": "0.0.1",
  "description": "This service stores meta information about plants and devices. Information can be accessed and manipulated via a REST API.",
  "main": "server.js",
  "scripts": {
    "start": "node index.js",
    "start:dev": "nodemon index.js",
    "start:debug": "node index_debug.js",
    "test": "mocha tests/*.test.js",
    "test:first": "mocha --timeout 60000 tests/*.test.js",
    "test:dev": "mocha --reporter=min --watch \"tests/*.test.js\"",
    "test:coverage": "nyc mocha tests/*.test.js --verbose",
    "test:coverage-ci": "nyc --check-coverage --lines 100 mocha tests/*.test.js --verbose",
    "lint": "./node_modules/.bin/eslint .",
    "lint-fix": "./node_modules/.bin/eslint --fix ."
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.9.26",
    "multer": "^1.4.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-fs": "^2.0.0",
    "chai-http": "^4.3.0",
    "chai-like": "^1.1.1",
    "eslint": "^7.5.0",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-mocha": "^7.0.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^8.1.1",
    "mock-fs": "^4.12.0",
    "mongodb": "^3.5.9",
    "mongodb-memory-server": "^6.6.3",
    "nodemon": "^2.0.4",
    "nyc": "^15.1.0",
    "standard": "^14.3.4"
  }
}
